      <RelativeLayout
            android:id="@+id/layout_sensor"
            android:layout_height="38sp"
            android:layout_width="match_parent"
            android:layout_below="@+id/layout_resolutions"
            >
         <TextView
               android:id="@+id/label_sensor"
               android:layout_width="70sp"
               android:layout_height="16sp"
               android:text="Rotation"
               android:textColor="@android:color/white"
               android:textAppearance="@android:style/TextAppearance.Small"
               />
         <TextView
               android:id="@+id/label_sensor2"
               android:layout_width="70sp"
               android:layout_height="16sp"
               android:layout_below="@+id/label_sensor"
               android:text="Sensor"
               android:textColor="@android:color/white"
               android:textAppearance="@android:style/TextAppearance.Small"
               />
         <Spinner
               android:id="@+id/spinner_sensors"
               android:layout_height="36sp"
               android:layout_width="match_parent"
               android:layout_toRightOf="@+id/label_sensor"
               android:prompt="@string/sensors"
               android:contentDescription="@string/sensors"
               android:spinnerStyle="@android:style/Widget.Spinner.DropDown"
               android:drawSelectorOnTop="true"
               android:textAppearance="@android:style/TextAppearance.Medium"
               android:background="@android:color/holo_blue_dark"
               android:entries="@array/empty_values"
               />
      </RelativeLayout>

      <RelativeLayout
            android:id="@+id/layout_maxsize"
            android:layout_height="32sp"
            android:layout_width="match_parent"
            android:layout_below="@id/layout_sensor"
            >
         <TextView
               android:id="@+id/label_maxsize"
               android:layout_width="70sp"
               android:layout_height="16sp"
               android:text="Max Size (Append"
               android:textColor="@android:color/white"
               android:textAppearance="@android:style/TextAppearance.Small"
               />
         <TextView
               android:id="@+id/label_maxsize2"
               android:layout_width="70sp"
               android:layout_height="16sp"
               android:layout_below="@id/label_maxsize"
               android:text="G=Gb,M=Mb"
               android:textColor="@android:color/white"
               android:textAppearance="@android:style/TextAppearance.Small"
               />

         <EditText
               android:id="@+id/text_maxsize"
               android:layout_height="29sp"
               android:layout_width="match_parent"
               android:layout_toRightOf="@+id/label_maxsize"
               android:background="@android:color/holo_blue_dark"
               android:maxLines="1"/>
      </RelativeLayout>

      <RelativeLayout
            android:id="@+id/layout_sensors"
            android:layout_height="38sp"
            android:layout_width="match_parent"
            android:layout_below="@+id/layout_maxsize"
      >
         <TextView
               android:id="@+id/label_xsensor"
               android:layout_width="70sp"
               android:layout_height="16sp"
               android:text="Record"
               android:textColor="@android:color/white"
               android:textAppearance="@android:style/TextAppearance.Small"
               />
         <TextView
               android:id="@+id/label_xsensor2"
               android:layout_width="70sp"
               android:layout_height="16sp"
               android:layout_below="@+id/label_xsensor"
               android:text="Sensors"
               android:textColor="@android:color/white"
               android:textAppearance="@android:style/TextAppearance.Small"
               />
         <com.thomashaertel.widget.MultiSpinner
               android:id="@+id/spinner_xsensors"
               android:layout_height="36sp"
               android:layout_width="match_parent"
               android:layout_toRightOf="@+id/label_xsensor"
               android:prompt="@string/xsensors"
               android:contentDescription="@string/xsensors"
               android:drawSelectorOnTop="true"
               android:textAppearance="@android:style/TextAppearance.Medium"
               android:background="@android:color/holo_blue_dark"
               android:entries="@array/empty_values"
               />
         </RelativeLayout>

      <RelativeLayout
            android:id="@+id/layout_onoff"
            android:layout_height="38sp"
            android:layout_width="match_parent"
            android:layout_below="@+id/layout_sensors"

            >
         <RelativeLayout
               android:id="@+id/layout_postprocess"
               android:layout_width="110sp"
               android:layout_height="match_parent"
               android:background="@drawable/rect_border"
         >
            <TextView
                  android:id="@+id/label_postprocess"
                  android:layout_width="80sp"
                  android:layout_height="16sp"
                  android:text="Off-Device"
                  android:textColor="@android:color/white"
                  android:textAppearance="@android:style/TextAppearance.Small"
                  />
            <TextView
                  android:id="@+id/label_postprocess2"
                  android:layout_width="80sp"
                  android:layout_height="16sp"
                  android:layout_below="@+id/label_postprocess"
                  android:text="Finalization"
                  android:textColor="@android:color/white"
                  android:textAppearance="@android:style/TextAppearance.Small"
                  />
            <CheckBox
                  android:id="@+id/checkbox_postprocess"
                  android:layout_height="36sp"
                  android:layout_width="30sp"
                  android:layout_toRightOf="@+id/label_postprocess"
                  android:textColor="#ff0000ff"
                  />
         </RelativeLayout>

         <RelativeLayout
               android:id="@+id/layout_flash"
               android:layout_width="91sp"
               android:layout_height="match_parent"
               android:layout_toRightOf="@+id/layout_postprocess"
               android:background="@drawable/rect_border"
               android:visibility="gone"
         >
            <TextView
                  android:id="@+id/label_flash"
                  android:layout_width="55sp"
                  android:layout_height="16sp"
                  android:text="Flash On"
                  android:textColor="@android:color/white"
                  android:paddingLeft="2px"
                  android:textAppearance="@android:style/TextAppearance.Small"
                  android:visibility="gone"
            />

            <CheckBox
                  android:id="@+id/checkbox_flash"
                  android:layout_height="36sp"
                  android:layout_width="37sp"
                  android:layout_toRightOf="@+id/label_flash"
                  android:visibility="gone"
            />
         </RelativeLayout>

         <RelativeLayout
               android:id="@+id/layout_stitching"
               android:layout_width="100sp"
               android:layout_height="match_parent"
               android:layout_toRightOf="@+id/layout_flash"
               android:background="@drawable/rect_border"
               >
            <TextView
                  android:id="@+id/label_stitching"
                  android:layout_width="70sp"
                  android:layout_height="16sp"
                  android:text="Stitching"
                  android:textColor="@android:color/white"
                  android:paddingLeft="2px"
                  android:textAppearance="@android:style/TextAppearance.Small"
                  />

            <CheckBox
                  android:id="@+id/checkbox_stitching"
                  android:layout_height="36sp"
                  android:layout_width="30sp"
                  android:layout_toRightOf="@+id/label_stitching"
                  />
         </RelativeLayout>

         <RelativeLayout
               android:id="@+id/layout_api"
               android:layout_width="115sp"
               android:layout_height="match_parent"
               android:layout_toRightOf="@+id/layout_stitching"
               android:background="@drawable/rect_border"
               >
            <TextView
                  android:id="@+id/label_api"
                  android:layout_width="85sp"
                  android:layout_height="16sp"
                  android:text="Camera2 API"
                  android:textColor="@android:color/white"
                  android:paddingLeft="2px"
                  android:textAppearance="@android:style/TextAppearance.Small"
                  android:visibility="gone"
            />

            <CheckBox
                  android:id="@+id/checkbox_api"
                  android:layout_height="36sp"
                  android:layout_width="30sp"
                  android:layout_toRightOf="@+id/label_api"
                  android:visibility="gone"
            />
         </RelativeLayout>
      </RelativeLayout>

   </RelativeLayout>
