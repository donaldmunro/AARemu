<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_margin="3dp"
>
   <RelativeLayout
         android:id="@+id/layout_name"
         android:layout_height="32sp"
         android:layout_width="match_parent"
         android:layout_marginTop="10dip"
         >
      <TextView
            android:id="@+id/label_recording_name"
            android:layout_width="70sp"
            android:layout_height="16sp"
            android:text="Name"
            android:textColor="@android:color/white"
            android:textAppearance="@android:style/TextAppearance.Small"
            />

      <EditText
            android:id="@+id/text_recording_name"
            android:layout_height="29sp"
            android:layout_width="match_parent"
            android:layout_toRightOf="@+id/label_recording_name"
            android:background="@android:color/holo_blue_dark"
            android:maxLines="1"/>
   </RelativeLayout>

   <RelativeLayout
         android:id="@+id/layout_resolutions"
         android:layout_height="38sp"
         android:layout_width="match_parent"
         android:layout_below="@+id/layout_name"

    >
      <TextView
            android:id="@+id/label_camera_resolutions"
            android:layout_width="70sp"
            android:layout_height="16sp"
            android:text="Resolution"
            android:textColor="@android:color/white"
            android:textAppearance="@android:style/TextAppearance.Small"
            />

      <Spinner
            android:id="@+id/spinner_camera_resolutions"
            android:layout_height="36sp"
            android:layout_width="match_parent"
            android:layout_toRightOf="@+id/label_camera_resolutions"
            android:prompt="@string/resolution"
            android:contentDescription="@string/resolution"
            android:spinnerStyle="@android:style/Widget.Spinner.DropDown"
            android:drawSelectorOnTop="true"
            android:background="@android:color/holo_blue_dark"
            android:entries="@array/empty_values"
            />
   </RelativeLayout>

